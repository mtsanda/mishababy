        const container = document.getElementById('image-container');
        const totalImages = 50;
        const imageSrc = '/1.png';

        for (let i = 1; i < totalImages; i++) {
            const img = document.createElement('img');
            img.src = imageSrc;
            img.alt = 'Image 1';
            container.appendChild(img);
        }
